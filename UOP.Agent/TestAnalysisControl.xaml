<UserControl x:Class="UOP.Agent.TestAnalysisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UOP.Agent"
				 Width="550"
	>
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/UOP.Agent;component/TestsAnalysisResourceDictionary.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<Border
		Padding="8 0 8 5"
		
				 Width="550"
		>

		<StackPanel
		
				 Width="550"
		>

			<TextBlock
				TextWrapping="Wrap"
				Text="Conclusion"
				Style="{StaticResource SectionHeaderStyle}"
				/>
			<TextBlock
				x:Name="Conclusion"
				>
		The regulatory analysis algorithm for building elements is functioning correctly, successfully identifying and processing reference planes, levels, and parking requirements according to Uruguayan building regulations (USAB 2).
			</TextBlock>

			<TextBlock 
				Text="Approved Tests"
				Margin="0 10 0 0"
				Style="{StaticResource SectionHeaderStyle}"
				/>
			<TextBlock
				x:Name="ApprovedTests" 
			Text="20"
			/>

			<TextBlock 
				Text="Failed Tests"
				Margin="0 10 0 0"
				Style="{StaticResource SectionHeaderStyle}"
				/>
			<TextBlock 
				x:Name="FailedTests"
			Text="20"
			/>

			<TextBlock 
			Text="Description"
				Margin="0 10 0 0"
				Style="{StaticResource SectionHeaderStyle}"
				/>
			<StackPanel
				x:Name="Description">

			</StackPanel>


			<TextBlock 
				Text="Suggestions"
				Margin="0 10 0 0"
				Style="{StaticResource SectionHeaderStyle}"
				/>
			<StackPanel
				x:Name="Suggestions">

			</StackPanel>


			<TextBlock 
				Text="Insights"
				Margin="0 10 0 0"
				Style="{StaticResource SectionHeaderStyle}"				
				/>
			<TextBlock 
				x:Name="Insights"
				Text="The model contains a significant number of rooms (266) but only one car parking space and one bicycle parking space, which might warrant verification against building regulations. The intersection calculations show precise coordinate values, indicating robust geometric calculations. The basement detection works correctly, identifying the 'Subsuelo' level as being below elevation zero."
				/>
		</StackPanel>
	</Border>
</UserControl>
