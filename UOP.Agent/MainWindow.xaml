<Window x:Class="UOP.Agent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UOP.Agent"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="960">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="60"/>
			<ColumnDefinition Width="250"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="60"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="30"/>
		</Grid.RowDefinitions>

		<!-- SIDEBAR START -->
		<!-- SIDEBAR START -->
		<!-- SIDEBAR START -->
		<!-- SIDEBAR START -->
		<Grid
			Grid.Row="1"
			Grid.Column="1"
			Background="AliceBlue"
			>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="10"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="10"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="10"/>
				<RowDefinition Height="25"/>
				<RowDefinition Height="2"/>
				<RowDefinition Height="10"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="10"/>
				<RowDefinition Height="25"/>
				<RowDefinition Height="10"/>
			</Grid.RowDefinitions>

			<Grid
				Grid.Column="1"
				Grid.Row="1"
				>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="70"/>
				</Grid.ColumnDefinitions>
				<TextBox
					x:Name="ApiKeyInput"
					Grid.Column="0"
					VerticalContentAlignment="Center"
					Text="sk-ba1e0599f76d4f8697d894cef5147aae"
					Padding="5 0 5 0"
					/>
				<Button 
					x:Name="ApiKeyValidateButton"
					Click="ApiKeyValidateButton_Click"
					Grid.Column="1"
					Content="Validate"
					/>
			</Grid>
			<ProgressBar
				x:Name="ValidatingApiKeyProgressBar"
				Grid.Column="1" 
				Grid.Row="2"
				IsIndeterminate="True"
				Visibility="Collapsed"
				/>


			<ScrollViewer					
				Grid.Column="1"
				Grid.Row="4"
				HorizontalScrollBarVisibility="Hidden"
				VerticalScrollBarVisibility="Auto"
				>

				<TextBlock
				x:Name="PromptTextInput"
				/>
			</ScrollViewer>

			<Grid
				Grid.Column="1"
				Grid.Row="6"
				>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="70"/>
				</Grid.ColumnDefinitions>
				<Button 
					x:Name="PromptSendButton"
					Grid.Column="1"
					Content="Send"
					Visibility="Hidden"
					/>

			</Grid>
		</Grid>
		<!-- SIDEBAR END -->
		<!-- SIDEBAR END -->
		<!-- SIDEBAR END -->
		<!-- SIDEBAR END -->

		<!-- MAIN TRAY START -->
		<!-- MAIN TRAY START -->
		<!-- MAIN TRAY START -->
		<!-- MAIN TRAY START -->
		<ScrollViewer
			HorizontalScrollBarVisibility="Auto"
			Grid.Row="1"
			Grid.Column="2"
			>
			<!--<TextBlock
				x:Name="MainTrayChatTray"
				Padding="5 5 5 5"
				/>-->
			<StackPanel
				x:Name="TestsAnalysisTray"
				/>
		</ScrollViewer>
		<!-- MAIN TRAY END -->
		<!-- MAIN TRAY END -->
		<!-- MAIN TRAY END -->
		<!-- MAIN TRAY END -->

		<!-- STATUS BAR START -->
		<!-- STATUS BAR START -->
		<!-- STATUS BAR START -->
		<!-- STATUS BAR START -->
		<Grid
			Grid.Row="2"
			Grid.Column="1"
			Grid.ColumnSpan="2"
			Background="#f0f0f0"
			>

		</Grid>
		<!-- STATUS BAR END -->
		<!-- STATUS BAR END -->
		<!-- STATUS BAR END -->
		<!-- STATUS BAR END -->

	</Grid>
</Window>
